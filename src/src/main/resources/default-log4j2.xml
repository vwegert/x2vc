<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="warn" monitorInterval="30">

    <Properties>
        <Property name="LOG_PATTERN">%date{HH:mm:ss.SSS} %level{WARN=WRN, DEBUG=DBG, ERROR=ERR, TRACE=TRC, INFO=INF} %msg%n</Property>
    </Properties>

    <Appenders>
        <Console name="Console" target="SYSTEM_OUT" follow="true">
            <PatternLayout pattern="${LOG_PATTERN}"/>
        </Console>
    </Appenders>

    <Loggers>
        <!-- process control should issue info messages  -->
        <Logger name="org.x2vc.process" level="info" additivity="false">
            <AppenderRef ref="Console"/>
		</Logger>
		<!-- warning messages from all other components only -->
        <Root level="warn">
            <AppenderRef ref="Console"/>
        </Root>
    </Loggers>

</Configuration>